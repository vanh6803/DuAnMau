<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    app:cardCornerRadius="30dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm loại sách"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:background="#FF5722"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:text="Tên loại sách"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_add_tenloaisach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/boder_edittext"
            android:ems="10"
            android:hint="Công nghệ thông tin"
            android:inputType="textPersonName"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="35dp"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/btn_cancel_addLS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCEL"
                android:layout_marginRight="15dp"
                android:background="@drawable/boder_buton"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btn_add_loaisach"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="save"
                android:layout_marginLeft="15dp"
                android:background="@drawable/boder_buton"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>