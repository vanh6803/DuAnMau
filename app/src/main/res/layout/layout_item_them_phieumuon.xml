<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:background="#FF5722"
            android:text="phiếu mượn"
            android:textColor="@color/white"
            android:gravity="center"
            />


        <Spinner
            android:id="@+id/spn_tv_addpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@android:color/transparent"
            />

        <Spinner
            android:id="@+id/spn_sach_addpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/tv_ngaythue_addpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="35dp"
            android:text="Ngày thuê: dùng gone để ẩn hiện"
            />

        <TextView
            android:id="@+id/tv_tienThue_pm_addpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="35dp"
            android:text="Tiền thuê: chọn sách nó có"
            />

        <CheckBox
            android:id="@+id/chk_traSach_addpm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Đã trả sách"
            android:textColor="@color/black"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="35dp"
            android:weightSum="2"
            >

            <Button
                android:id="@+id/btn_cancel_addpm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CANCEL"
                android:layout_marginRight="15dp"
                android:background="@drawable/boder_buton"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btn_add_addpm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="save"
                android:layout_marginLeft="15dp"
                android:background="@drawable/boder_buton"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>
    
</androidx.cardview.widget.CardView>